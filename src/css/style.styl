// Import all partials
@require './_*.styl'
@require 'font-awesome.min.css'
@import url('https://www.fontify.me/wf/af83a66be5d910ef21b7df40e1dd588f')

// Header
header{
  padding 1em
  box-shadow 0 0 10px #c3c3c3
  position: fixed;
  width: 100%;
  z-index: 4;
  background-color: white;
  h3{
    text-align center
    margin 0
  }
  #trigger{
    display none
  }
  .hamburger{
    display flex
    justify-content center
    flex-direction column
    align-content center
    position fixed
    top: 3vh
    right: 5vw
    height 2em
    width 3em
    transition all .1s ease-in
    .line{
      background-color #212121
      width 80%
      height 2px
      margin 3px auto
      transition all .1s ease-in
    }
  }
  input:checked + label{
    background-color #212121
    .line{
      background-color white
    }
  }
}

// Content Wrap
.content-wrap{
  padding 4em 0 0
  background-color #f5f5f5
}

// Card
.card{
  margin 3em 0
  .event-type{
    display block
    padding .5em
    text-align right
    border-radius 1em 1em 0 0
    background-color #1eaedb
    color #FFFFFF
    padding-right: 2em;
    text-transform: uppercase;
    letter-spacing: 4px;
  }
  .details{
    padding 1.5em 1em
    box-shadow 0 6px 54px -9px #d3d3d3
    background-color white
    > span{
      display block
    }
  }
  h4{
    margin 0
  }
  .tags-wrap{
    display flex
    font-size .7em
    .tag{
      background-color #1eaedb
      border-radius .5em
      padding .5em 1em
      color: #FFF
      &:before{
        content '#'
      }
    }
  }
  .btn-wrap{
    display flex
    justify-content space-around
    align-items center
    font-size 1.4em
    a{
      display block
      padding .5em
      width 100%
      text-align center
    }
  }
}