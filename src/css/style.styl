// Import all partials
@require './_*.styl'
@require 'font-awesome.min.css'
@import url('https://www.fontify.me/wf/af83a66be5d910ef21b7df40e1dd588f')

$brand-blue = #1eaedb

// Header
header {
  padding 1em
  box-shadow 0 0 10px #c3c3c3
  position: fixed
  width: 100%
  z-index: 4
  background-color: white
  h3 {
    text-align center
    margin 0
  }
  #trigger {
    display none
  }
  .hamburger {
    display flex
    justify-content center
    flex-direction column
    align-content center
    position fixed
    top: 3vh
    right: 5vw
    height 2em
    width 3em
    transition all .1s ease-in
    .line {
      background-color #212121
      width 80%
      height 2px
      margin 3px auto
      transition all .1s ease-in
    }
  }
  .side-nav {
    display block
    position absolute
    background-color white
    width 100vw
    height 100vh
    top 0
    left 100vw
    transition all .3s ease-in-out
    .back-btn{
      position fixed
      top -5vh
      right 10vw
      transition all .3s ease-in-out
    }
    ul{
      list-style none
      padding 10vh 0
      li{
        padding 0
        margin 0
        a{
          padding 1em 2em
          display block
          text-decoration: none
        }
      }
    }
  }
  input:checked ~ .side-nav {
    display block
    left 0
    .back-btn{
      top 5vh
    }
  }
}

// Content Wrap
.content-wrap {
  padding 7em 0 0
  background-color #f5f5f5
  .time-heading {
    text-align center
    margin-bottom 0
    letter-spacing 4px
    text-transform uppercase
    font-weight 800
    color #b3b3b3
  }
}

// Card
.card {
  margin 2em 0 3em
  overflow hidden
  box-shadow: 0 10px 54px -9px #d3d3d3
  .event-type {
    display block
    padding .5em
    text-align right
    border-radius 0
    background-color  $brand-blue
    color #FFFFFF
    padding-right: 2em
    position relative
    text-transform: uppercase
    letter-spacing: 4px
    .tags-wrap {
      display flex
      flex-direction row-reverse
    }
    &:after {
      position absolute
      top 99%
      right 0
      content ''
      display block
      width: 0
      height: 0
      border-top: 20px solid $brand-blue
      border-left: 100vw solid transparent
    }
  }
  .details {
    padding 1.5em 1em
    box-shadow 0 6px 54px -9px #d3d3d3
    background-color white
    small{
      margin-bottom: 1em
      display: block
    }
    .detail-point span{
      display inline-block
      width 2em
    }
  }
  h4 {
    margin 0
  }
  .tags-wrap {
    display flex
    font-size .7em
    .tag {
      background-color $brand-blue
      border-radius .5em
      padding .5em 1em
      color: #FFF
      &:before {
        content '#'
      }
    }
  }
  .btn-wrap {
    display flex
    justify-content space-around
    align-items center
    margin 1em 0
    a.btn {
      display block
      width 100%
      text-align center
      background-position center
      background-size contain
      background-repeat no-repeat
      height 1.5em
      padding 1em
      &.info {
        background-image url('./images/info.svg')
      }
      &.form {
        background-image url('./images/application-form.svg')
      }
      &.comments {
        background-image url('./images/chat.svg')
      }
    }
  }
}